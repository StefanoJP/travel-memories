<ul class="media-list">
  <% memories.each do |memory| %>
    <li class="media">
      <div class="panel panel-default">
        <div class="media-left">
          <!-- 下記にimage_nameが反映されるようにする -->
          <img class="media-object img-rounded" src="<%= gravatar_url(memory.user, options = { size: 100 }) %>" alt="">
        </div>
        <div class="media-right">
          <ul>
            <!-- listヘッドアイコン変更-->
            <!-- パスをmemories#showへ変更-->
            <li>タイトル：<%= link_to memory.title, user_path(memory.user) %></li>
            <li>期間：<%= memory.date %></li>
            <li>場所：<%= memory.location %></li>  
            <!-- ログインユーザーとメモリーユーザーが同じ時、edit/destroy可能にする -->
            <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
          </ul>
          <% if current_user == memory.user %>
            <%= link_to "編集", memory, method: :edit, class: 'btn btn-success btn-xs' %>
            <%= link_to "削除", memory, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div> 
      </div>
    </li>
  <% end %>
  <%= paginate memories %>
</ul>