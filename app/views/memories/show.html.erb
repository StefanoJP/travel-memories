<div class="col-xs-8 col-xs-offset-2">
<h1><%= @memory.title %>の思い出</h1>
  <ul class="media-list">
    <% @logs.each do |log| %>
      <li class="media">
        <div class="panel panel-default">
          <div class="media-left">
            <% if log.image_name? %>
              <%= image_tag log.image_name.thumb.url%>
              <!--%= link_to image_tag log.image_name.thumb.url, :action =>"index" %-->
            <% else %>
              <%= image_tag('no-featured-175.jpg') %>
            <% end %>
          </div>
          <div class="media-right">
            <ul>
              <!-- listヘッドアイコン変更-->
              <!--<li>タイトル：<%= log.title %></li>-->
              <li>日程：<%= log.date %></li>
              <li>スポット：<%= log.location %></li>  
              <li>コメント：<%= log.content %></li>
            </ul>
            <% if current_user == @memory.user %>
              <!--
              <%= link_to '編集', edit_log_path(log), remote: true %>
              <div id="log-modal" class="log fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
              -->
              
              <%= link_to "編集", edit_log_path(log), class: 'btn btn-success btn-xs' %>
              <%= link_to "削除", log, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-xs' %>
            <% end %>
          </div> 
        </div>
      </li>
    <% end %>
  </ul>
</div>

<% if @memory.user == current_user %>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <%= form_for(@log) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
            <h2>思い出をのこそう♪</h2>
            <div class="form">
              <%= image_tag @log.image_name.thumb.url if @log.image_name? %><br>
              <%= f.label :画像・動画をアップロード %>
              <%= f.file_field :image_name, class: 'form-control',rows: 3 %>
              <%= f.hidden_field :image_name_cache %>
            </div>
            <!--
              <div class="form">
              <%= f.label :タイトル %>
              <%= f.text_area :title, class: 'form-control', rows: 1 %>
            </div>
            -->
            <div class="form"> 
              <%= f.label :日程 %>
              <%= f.text_area :date, class: 'form-control', rows: 1 %>
            </div>
            <div class="form">
              <%= f.label :スポット %>
              <%= f.text_area :location, class: 'form-control', rows: 1 %>
            </div>
            <div class="form">
              <%= f.label :コメント %>  
              <%= f.text_area :content, class: 'form-control', rows: 5 %>
              <%= f.hidden_field :memory_id %>
            </div>
          </div>
          <%= f.submit '思い出を追加する', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
<% end %>


 