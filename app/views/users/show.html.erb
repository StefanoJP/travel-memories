<div class="profile">
  <div class="row">
    <aside class="col-md-6 col-md-offset-3">
      <div class="user-image">
        <img class="media-object img-circle img-responsive" src="<%= gravatar_url(@user, { size: 150 }) %>" alt="">
      </div>
      <div class="user-name">
        <h3><%= @user.name %></h3>
      </div>
    </aside>
  </div>
</div>

<div class="user-posts>
  <div class="row">
    <div class="contents">
      <ul class="nav nav-tabs nav-justified">
        <!--ユーザー名,カウント数を表示-->
        <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %><%= @user.name %>の思い出 <span class="badge"><%= @count_memories %></span><% end %></li>
        <!--<li><a href="#">お気に入りの思い出</a></li>-->
      </ul>
      <div class="myMemories">
        <%= render 'memories/memories', memories: @memories %>
      </div>
    </div>
  </div>
</div>

